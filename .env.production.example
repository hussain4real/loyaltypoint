# =============================================================================
# Production Environment Configuration for Google Cloud Run
# =============================================================================
# This file is a template. The actual values are set via Cloud Run env vars
# and Secret Manager.
# =============================================================================

APP_NAME="Loyalty Point API"
APP_ENV=production
APP_KEY=  # Set via Secret Manager
APP_DEBUG=false
APP_URL=  # Set via Cloud Run (auto-detected)

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# Logging to stderr for Cloud Run
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# =============================================================================
# Database - Cloud SQL MySQL via Unix Socket
# =============================================================================
DB_CONNECTION=mysql
DB_SOCKET=/cloudsql/YOUR_PROJECT_ID:YOUR_REGION:loyalty-point-db
DB_DATABASE=loyalty_point
DB_USERNAME=loyalty_user
DB_PASSWORD=  # Set via Secret Manager

# =============================================================================
# Session & Cache
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

CACHE_STORE=database

# =============================================================================
# Queue - Using database for simplicity
# For production at scale, consider Cloud Tasks or Pub/Sub
# =============================================================================
QUEUE_CONNECTION=database

# =============================================================================
# Mail - Gmail SMTP
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=  # Set via Secret Manager (use App Password)
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Filesystem
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# Sanctum
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=
